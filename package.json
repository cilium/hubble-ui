{
  "private": true,
  "scripts": {
    "test": "cd client && npm test",
    "install:client": "cd client && npm install",
    "install:all": "npm install && npm run install:client",
    "postinstall": "npm run install:client",
    "lint:ts": "eslint --ignore-path .gitignore \"./{client,server}/src/**/*.{ts,tsx,js,jsx,mjs}\"",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:scss": "stylelint --ignore-path .gitignore \"./**/*.scss\" --syntax scss",
    "lint:scss:fix": "npm run lint:scss -- --fix",
    "watch:server": "servor ./server/public",
    "watch:client": "cd client && npm run watch",
    "watch": "npm run generate-proto && run-p watch:*",
    "build": "cd client && npm run build",
    "upgrade-deps:client": "cd client && npm run upgrade-deps",
    "upgrade-deps:root": "npm-check --update --save-exact",
    "upgrade-deps": "run-s upgrade-deps:*",
    "generate-proto": "cd client && npm run generate-proto"
  },
  "lint-staged": {
    "./client/src/!(proto)/**/*.{ts,tsx,js,jsx,mjs}": [
      "npm run --silent lint:ts:fix"
    ],
    "./client/src/**/*.scss": [
      "npm run --silent lint:scss:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.9",
    "npm-check": "5.9.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "servor": "4.0.2",
    "source-map-explorer": "2.4.2",
    "style-loader": "1.2.1",
    "stylelint": "13.6.0",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.17.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.9.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "client/src/proto",
      "server/public"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "16.9.0"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false,
          "variables": false
        }
      ],
      "@typescript-eslint/interface-name-prefix": "off",
      "react/prop-types": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "double",
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null,
      "declaration-empty-line-before": null,
      "no-missing-end-of-source-newline": null,
      "at-rule-no-unknown": null,
      "at-rule-empty-line-before": null,
      "no-descending-specificity": null
    }
  }
}
