{
  "private": true,
  "scripts": {
    "test": "cd client && npm test",
    "start": "cd server && npm start",
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "lint:ts": "eslint --ignore-path .gitignore \"./{common,client,server}/src/**/*.{ts,tsx,js,jsx,mjs}\"",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:scss": "stylelint --ignore-path .gitignore \"./**/*.scss\" --syntax scss",
    "lint:scss:fix": "npm run lint:scss -- --fix",
    "watch:server": "cd server && npm run watch",
    "watch:client": "cd client && npm run watch",
    "watch": "npm run generate-proto && run-p watch:*",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build": "npm run generate-proto && run-s build:*",
    "upgrade-deps:server": "cd server && npm run upgrade-deps",
    "upgrade-deps:client": "cd client && npm run upgrade-deps",
    "upgrade-deps:common": "cd common && npm run upgrade-deps",
    "upgrade-deps:root": "npm-check --update --save-exact",
    "upgrade-deps": "run-s upgrade-deps:*",
    "generate-proto": "cd common && npm run generate-proto"
  },
  "lint-staged": {
    "./client/src/**/*.{ts,tsx,js,jsx,mjs}": [
      "npm run --silent lint:ts:fix",
      "git add"
    ],
    "./server/src/**/*.{ts,tsx,js,jsx,mjs}": [
      "npm run --silent lint:ts:fix",
      "git add"
    ],
    "./common/src/**/*.{ts,tsx,js,jsx,mjs}": [
      "npm run --silent lint:ts:fix",
      "git add"
    ],
    "./**/*.scss": [
      "npm run --silent lint:scss:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "npm-check": "5.9.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "source-map-explorer": "2.3.1",
    "style-loader": "1.2.0",
    "stylelint": "13.2.0",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.14.2",
    "typescript": "3.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "common/src/types/hubble/",
      "common/src/types/graphql.ts",
      "server/public"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "16.9.0"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/camelcase": [
        "error",
        {
          "properties": "never",
          "ignoreDestructuring": true
        }
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false,
          "variables": false
        }
      ],
      "@typescript-eslint/interface-name-prefix": "off",
      "react/prop-types": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "double",
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null,
      "declaration-empty-line-before": null,
      "no-missing-end-of-source-newline": null,
      "at-rule-no-unknown": null,
      "at-rule-empty-line-before": null,
      "no-descending-specificity": null
    }
  }
}
