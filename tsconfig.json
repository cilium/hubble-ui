{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "declaration": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./build",
    "jsx": "react",
    "paths": {
      "~/*": ["./*"],
      "~backend/*": ["./../backend/*"],
      "~e2e/*": ["./testing/e2e/*"]
    },
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "isolatedModules": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "src/testing/e2e/cypress", "src/testing/e2e/config"],
  "include": ["src/**/*", "src/**/*.json", "backend/proto/**/*.ts"]
}
