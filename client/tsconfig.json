{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "rootDir": "../",
    "baseUrl": "./src",
    "outDir": "./build",
    "jsx": "react",
    "paths": {
      "~/*": ["./*"],
      "~common/*": ["../../common/src/*"]
    }
  },
  "exclude": ["node_modules/*"],
  "include": ["src/**/*"]
}
