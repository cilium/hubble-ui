{
  "private": true,
  "name": "hubble-ui-server",
  "scripts": {
    "cleanup": "rm -rf ./build",
    "start": "NODE_ENV=production node -r source-map-support/register build/index.js",
    "watch": "NODE_ENV=development nodemon --watch src --ext ts,js,json --exec ts-node -r source-map-support/register -r dotenv/config -- ./src/index.ts dotenv_config_path=.env.development | bunyan",
    "build": "npm run cleanup && ../node_modules/.bin/tsc --project tsconfig.json",
    "upgrade-deps": "../node_modules/.bin/npm-check --update --save-exact"
  },
  "dependencies": {
    "bunyan": "1.8.12",
    "express": "4.17.1",
    "source-map-support": "0.5.16"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.6",
    "@types/express": "4.17.3",
    "@types/node": "13.7.7",
    "dotenv": "8.2.0",
    "nodemon": "2.0.2",
    "ts-node": "8.6.2",
    "typescript": "^3.8.3"
  }
}
